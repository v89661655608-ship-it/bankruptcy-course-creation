{
  "tests": [
    {
      "name": "Send notifications to expiring clients",
      "method": "GET",
      "path": "/?action=notify",
      "expectedStatus": 200
    },
    {
      "name": "Register combo purchase without API key returns 401",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "email": "test@example.com",
        "amount": 4999
      },
      "expectedStatus": 401,
      "expectedBody": {
        "success": false
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Register combo purchase with valid API key returns token",
      "method": "POST",
      "path": "/?action=register",
      "headers": {
        "X-Api-Key": "bankrot_combo_secret_2025"
      },
      "body": {
        "email": "v89661655608@gmail.com",
        "amount": 4999
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "token": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}